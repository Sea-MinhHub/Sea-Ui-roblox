local UI = SeaMinhUI

-- ============================================================
-- CREATE WINDOW
-- ============================================================
local window = UI:CreateWindow({
    Title = "Sea Minh UI v3.0",
    SubTitle = "Full Featured Example",
    Icon = "home",
    Size = UDim2.fromOffset(600, 500),
    MinimizeKey = Enum.KeyCode.RightControl
})

-- Welcome Notification
UI:Notify({
    Title = "Welcome!",
    Content = "Sea Minh UI v3.0 loaded successfully!",
    Duration = 4,
    Type = "Success",
    Icon = "check"
})

-- ============================================================
-- TAB 1: HOME
-- ============================================================
local homeTab = window:AddTab({
    Title = "Home",
    Icon = "home"
})

local welcomeSection = homeTab:AddSection("ğŸ® Welcome")

welcomeSection:AddLabel({
    Text = "Sea Minh UI v3.0.0",
    Bold = true,
    Size = 16
})

welcomeSection:AddLabel({
    Text = "Complete UI library with notifications, icons, and auto-save!"
})

welcomeSection:AddDivider()

welcomeSection:AddButton({
    Title = "Success Notification",
    Icon = "check",
    Callback = function()
        UI:Notify({
            Title = "Success!",
            Content = "This is a success notification",
            Type = "Success",
            Duration = 3
        })
    end
})

welcomeSection:AddButton({
    Title = "Info Notification",
    Icon = "bell",
    Callback = function()
        UI:Notify({
            Title = "Information",
            Content = "This is an info notification",
            Type = "Info",
            Duration = 3
        })
    end
})

welcomeSection:AddButton({
    Title = "Warning Notification",
    Icon = "alert",
    Callback = function()
        UI:Notify({
            Title = "Warning!",
            Content = "This is a warning notification",
            Type = "Warning",
            Duration = 3
        })
    end
})

welcomeSection:AddButton({
    Title = "Error Notification",
    Icon = "x",
    Callback = function()
        UI:Notify({
            Title = "Error!",
            Content = "This is an error notification",
            Type = "Error",
            Duration = 3
        })
    end
})

-- ============================================================
-- TAB 2: SETTINGS
-- ============================================================
local settingsTab = window:AddTab({
    Title = "Settings",
    Icon = "settings"
})

local toggleSection = settingsTab:AddSection("âš™ï¸ Toggle Options")

local toggle1 = toggleSection:AddToggle({
    Title = "Enable Feature",
    Default = false,
    Callback = function(value)
        print("Feature:", value and "ON" or "OFF")
        UI:Notify({
            Title = "Toggle Changed",
            Content = "Feature is now " .. (value and "enabled" or "disabled"),
            Type = "Info",
            Duration = 2
        })
    end
})

local toggle2 = toggleSection:AddToggle({
    Title = "Auto Save",
    Default = true,
    Callback = function(value)
        print("Auto Save:", value)
    end
})

local toggle3 = toggleSection:AddToggle({
    Title = "Show Notifications",
    Default = true,
    Callback = function(value)
        print("Notifications:", value)
    end
})

local sliderSection = settingsTab:AddSection("ğŸšï¸ Sliders")

local slider1 = sliderSection:AddSlider({
    Title = "Walk Speed",
    Min = 16,
    Max = 100,
    Default = 16,
    Callback = function(value)
        print("Speed:", value)
    end
})

local slider2 = sliderSection:AddSlider({
    Title = "Jump Power",
    Min = 50,
    Max = 200,
    Default = 50,
    Callback = function(value)
        print("Jump:", value)
    end
})

-- ============================================================
-- TAB 3: PLAYER
-- ============================================================
local playerTab = window:AddTab({
    Title = "Player",
    Icon = "user"
})

local inputSection = playerTab:AddSection("ğŸ“ Text Inputs")

local input1 = inputSection:AddInput({
    Title = "Player Name",
    Placeholder = "Enter your name...",
    Default = "Player",
    Callback = function(value)
        print("Name:", value)
        UI:Notify({
            Title = "Name Updated",
            Content = "Your name is now: " .. value,
            Type = "Success"
        })
    end
})

local input2 = inputSection:AddInput({
    Title = "Custom Message",
    Placeholder = "Type something...",
    Callback = function(value)
        print("Message:", value)
    end
})

local dropdownSection = playerTab:AddSection("ğŸ“‹ Dropdowns")

local dropdown1 = dropdownSection:AddDropdown({
    Title = "Select Mode",
    Values = {"Easy", "Normal", "Hard", "Extreme", "Nightmare"},
    Default = "Normal",
    Callback = function(value)
        print("Mode:", value)
        UI:Notify({
            Title = "Mode Selected",
            Content = "Difficulty: " .. value,
            Type = "Info"
        })
    end
})

local dropdown2 = dropdownSection:AddDropdown({
    Title = "Select Weapon",
    Values = {"Sword", "Axe", "Bow", "Staff", "Dagger"},
    Default = "Sword",
    Callback = function(value)
        print("Weapon:", value)
    end
})

-- ============================================================
-- TAB 4: CUSTOMIZATION
-- ============================================================
local customTab = window:AddTab({
    Title = "Custom",
    Icon = "star"
})

local colorSection = customTab:AddSection("ğŸ¨ Color Pickers")

colorSection:AddLabel({
    Text = "Click color boxes to randomize colors"
})

local color1 = colorSection:AddColorPicker({
    Title = "Primary Color",
    Default = Color3.fromRGB(96, 205, 255),
    Callback = function(color)
        print("Primary:", color)
        UI:Notify({
            Title = "Color Changed",
            Content = "Primary color updated!",
            Type = "Success"
        })
    end
})

local color2 = colorSection:AddColorPicker({
    Title = "Accent Color",
    Default = Color3.fromRGB(255, 100, 100),
    Callback = function(color)
        print("Accent:", color)
    end
})

local keybindSection = customTab:AddSection("âŒ¨ï¸ Keybinds")

keybindSection:AddLabel({
    Text = "Click keybind button and press any key"
})

local keybind1 = keybindSection:AddKeybind({
    Title = "Toggle Menu",
    Default = Enum.KeyCode.E,
    Callback = function(key)
        print("Menu key:", key.Name)
    end,
    OnPress = function()
        print("Menu toggled!")
        UI:Notify({
            Title = "Menu Toggled",
            Content = "Press the key again to toggle",
            Type = "Info"
        })
    end
})

local keybind2 = keybindSection:AddKeybind({
    Title = "Fly Mode",
    Default = Enum.KeyCode.F,
    Callback = function(key)
        print("Fly key:", key.Name)
    end,
    OnPress = function()
        print("Fly activated!")
    end
})

-- ============================================================
-- TAB 5: INFO
-- ============================================================
local infoTab = window:AddTab({
    Title = "Info",
    Icon = "info"
})

local infoSection = infoTab:AddSection("â„¹ï¸ Information")

infoSection:AddLabel({
    Text = "ğŸ“Š Sea Minh UI v3.0.0",
    Bold = true,
    Size = 15
})

infoSection:AddLabel({
