    Text = "â€¢ ğŸ–±ï¸ Draggable Window"
})

infoSection:AddLabel({
    Text = "â€¢ ğŸ’¾ Auto-Save Settings"
})

infoSection:AddLabel({
    Text = "â€¢ ğŸ­ Smooth Animations"
})

local controlSection = infoTab:AddSection("ğŸ® Controls")

controlSection:AddButton({
    Title = "Minimize Window",
    Icon = "minus",
    Callback = function()
        window:Minimize()
        UI:Notify({
            Title = "Window Minimized",
            Content = "Press RightControl to restore",
            Type = "Info",
            Duration = 2
        })
    end
})

controlSection:AddButton({
    Title = "Print All Values",
    Icon = "search",
    Callback = function()
        print("\nâ”â”â”â”â”â”â” VALUES â”â”â”â”â”â”â”")
        print("Toggle 1:", toggle1:GetValue())
        print("Toggle 2:", toggle2:GetValue())
        print("Slider 1:", slider1:GetValue())
        print("Input 1:", input1:GetValue())
        print("Dropdown:", dropdown1:GetValue())
        print("Color 1:", color1:GetColor())
        print("Keybind 1:", keybind1:GetKey().Name)
        print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n")
        
        UI:Notify({
            Title = "Values Printed",
            Content = "Check console (F9) for details",
            Type = "Success"
        })
    end
})

controlSection:AddButton({
    Title = "Save Settings",
    Icon = "check",
    Callback = function()
        SaveManager:Save()
        UI:Notify({
            Title = "Saved!",
            Content = "All settings have been saved",
            Type = "Success",
            Duration = 2
        })
        print("âœ“ Settings saved!")
    end
})

controlSection:AddButton({
    Title = "Reset Settings",
    Icon = "x",
    Callback = function()
        SaveManager.Data = {}
        SaveManager:Save()
        UI:Notify({
            Title = "Reset Complete",
            Content = "All settings have been reset",
            Type = "Warning",
            Duration = 3
        })
        print("âœ“ Settings reset!")
    end
})

UI:Notify({
    Title = "Success!",
    Content = "Operation completed",
    Duration = 3,
    Type = "Success", -- Info, Success, Warning, Error
    Icon = "check" -- Optional
})
